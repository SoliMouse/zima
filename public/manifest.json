{
  "manifest_version": 3,
  "name": "Zima - ChatGPT Companion",
  "version": "1.0",
  "description": "Enhance your OpenAI Chat experience with Zima, offering exporting, and search capabilities.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}